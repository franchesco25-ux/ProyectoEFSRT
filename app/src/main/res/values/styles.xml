<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomCardButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/teal_200</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">12dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CustomCardButton.GreenBorder" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/green_dark</item>
        <item name="iconTint">@color/green_dark</item>
        <item name="strokeColor">@color/green_dark</item>
        <item name="strokeWidth">3dp</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="CalendarDayLabel" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:textColor">@color/stitch_text_muted</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="CalendarDay" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
