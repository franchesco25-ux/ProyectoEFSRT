<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_dark">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/bg_dark"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:navigationIconTint="@color/white"
        app:title="Resumen de Presupuesto"
        app:titleTextColor="@color/text_on_dark" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Saldo restante -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SALDO RESTANTE"
                android:textColor="@color/green_accent"
                android:textSize="12sp"
                android:textAllCaps="true"
                android:gravity="center"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/tv_saldo_restante"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S/ 400.00"
                android:textColor="@color/text_on_dark"
                android:textSize="36sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tv_actualizado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Actualizado: Hoy, 10:45 AM"
                android:textColor="@color/text_on_dark_muted"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:layout_marginTop="4dp" />

            <!-- Alerta de presupuesto -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardBackgroundColor="@color/bg_dark_card"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_goal"
                            app:tint="@color/green_accent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Alerta de Presupuesto"
                            android:textColor="@color/text_on_dark"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginStart="12dp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¡Atención! Has superado el 80% de tu presupuesto. Te quedan S/ 400.00 para el mes."
                        android:textColor="@color/text_on_dark"
                        android:textSize="14sp"
                        android:layout_marginTop="12dp"
                        android:lineSpacingMultiplier="1.2" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_revisar_planes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:text="Revisar Planes"
                        android:textColor="@color/white"
                        app:backgroundTint="@color/green_accent"
                        app:cornerRadius="12dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Gasto mensual / Presupuesto total -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/bg_dark_card"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gasto Mensual"
                            android:textColor="@color/text_on_dark"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_gasto_mensual"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="S/ 2,100.00"
                            android:textColor="@color/text_on_dark"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp" />

                        <ProgressBar
                            android:id="@+id/progress_gasto"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="6dp"
                            android:layout_marginTop="8dp"
                            android:max="100"
                            android:progress="84"
                            android:progressDrawable="@drawable/progress_bar_green"
                            android:indeterminate="false" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="84% de tu presupuesto usado"
                            android:textColor="@color/green_accent"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="end">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Presupuesto Total"
                            android:textColor="@color/text_on_dark"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_presupuesto_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="S/ 2,500.00"
                            android:textColor="@color/text_on_dark"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="QUEDAN 14 DÍAS"
                            android:textColor="@color/text_on_dark_muted"
                            android:textSize="12sp"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Ahorrado / Promedio diario -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardBackgroundColor="@color/bg_dark_card"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_attach_money"
                            app:tint="@color/green_accent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AHORRADO ESTE MES"
                            android:textColor="@color/text_on_dark"
                            android:textSize="11sp"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:id="@+id/tv_ahorrado"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="S/ 340.50"
                            android:textColor="@color/text_on_dark"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardBackgroundColor="@color/bg_dark_card"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_analysis"
                            app:tint="@color/green_accent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PROMEDIO DIARIO"
                            android:textColor="@color/text_on_dark"
                            android:textSize="11sp"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:id="@+id/tv_promedio_diario"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="S/ 67.74"
                            android:textColor="@color/text_on_dark"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Categorías -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categorías"
                android:textColor="@color/text_on_dark"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_categorias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_marginTop="8dp"
                android:paddingBottom="24dp"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
