<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/bg_dark">

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrar Ingreso"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/green_accent"
        android:gravity="center"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MONTO"
        android:textColor="@color/green_accent"
        android:textSize="12sp"
        android:textAllCaps="true"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/etMontoIngreso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="S/ 0.00"
        android:inputType="numberDecimal"
        android:background="@drawable/edittext_dark"
        android:padding="16dp"
        android:textColor="@color/text_on_dark"
        android:textColorHint="@color/text_on_dark_muted"
        android:textSize="18sp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descripción"
        android:textColor="@color/text_on_dark"
        android:textSize="14sp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/etDescripcionIngreso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descripción del ingreso"
        android:background="@drawable/edittext_dark"
        android:padding="16dp"
        android:textColor="@color/text_on_dark"
        android:textColorHint="@color/text_on_dark_muted"
        android:layout_marginBottom="24dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnGuardarIngreso"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Guardar Ingreso"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textColor="@color/white"
        app:backgroundTint="@color/green_accent"
        app:cornerRadius="12dp"
        android:layout_marginTop="8dp"/>
</LinearLayout>
