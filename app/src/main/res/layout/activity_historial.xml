<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/bg_dark">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarHistorial"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/bg_dark"
        android:elevation="0dp"
        android:title="Historial"
        android:titleTextColor="@color/text_on_dark"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:navigationIconTint="@color/white" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@color/bg_dark_card"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <Spinner
                android:id="@+id/spinnerFiltroCategoria"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/edittext_dark"
                android:padding="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnFechaInicio"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="52dp"
                    android:layout_marginEnd="8dp"
                    android:text="Fecha Inicio"
                    android:textAllCaps="false"
                    android:textColor="@color/text_on_dark"
                    app:strokeColor="@color/green_accent"
                    app:backgroundTint="@color/bg_dark_card"
                    app:cornerRadius="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnFechaFin"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="52dp"
                    android:layout_marginStart="8dp"
                    android:text="Fecha Fin"
                    android:textAllCaps="false"
                    android:textColor="@color/text_on_dark"
                    app:strokeColor="@color/green_accent"
                    app:backgroundTint="@color/bg_dark_card"
                    app:cornerRadius="12dp" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tvHistorial"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp"
        android:text="Historial"
        android:textSize="16sp"
        android:textColor="@color/text_on_dark_muted"
        android:scrollbars="vertical"
        android:padding="16dp" />
</LinearLayout>
