<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="14dp"
    app:cardElevation="5dp"
    app:strokeColor="#FFE0E0E0"
    app:strokeWidth="1dp"
    android:backgroundTint="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvTipoTransaccion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="INGRESO"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="#28A745"/>

            <TextView
                android:id="@+id/tvFechaHistorial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01/01/2024"
                android:textSize="12sp"
                android:textColor="#FF6C757D"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tvDescripcionHistorial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="DescripciÃ³n"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FF212529"/>

        <TextView
            android:id="@+id/tvCategoriaHistorial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="CategorÃ­a"
            android:textSize="14sp"
            android:textColor="#FF6C757D"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvMontoHistorial"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="+ S/. 1000.00"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#28A745"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditarTransaccion"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                android:text="âœ"
                android:textSize="16sp"
                app:cornerRadius="8dp"
                app:backgroundTint="#FF007BFF"
                android:layout_marginEnd="8dp"
                style="@style/Widget.MaterialComponents.Button"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEliminarTransaccion"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                android:text="ðŸ—‘"
                android:textSize="16sp"
                app:cornerRadius="8dp"
                app:backgroundTint="#FFDC3545"
                style="@style/Widget.MaterialComponents.Button"/>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
