<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="0dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="14dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="#2A3D29"
    app:cardBackgroundColor="@color/bg_dark_card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="14dp">

        <View
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@color/green_accent"
            android:layout_marginEnd="12dp"/>

        <FrameLayout
            android:layout_width="44dp"
            android:layout_height="44dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_circle_avatar" />

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_attach_money"
                app:tint="@color/green_accent" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:minHeight="44dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/descripcion_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DescripciÃ³n"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/text_on_dark"
                android:maxLines="2"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/categoria_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CategorÃ­a"
                android:textSize="12sp"
                android:textColor="@color/text_on_dark_muted"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/fecha_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha"
                android:textSize="11sp"
                android:textColor="@color/text_on_dark_muted"
                android:layout_marginTop="1dp"/>

            <TextView
                android:id="@+id/id_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end|center_vertical">

            <TextView
                android:id="@+id/monto_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S/ 0.00"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/green_accent"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEditarIngreso"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:padding="0dp"
                    android:text="âœ"
                    android:textSize="12sp"
                    app:cornerRadius="8dp"
                    app:backgroundTint="@color/green_accent"
                    android:layout_marginEnd="4dp"
                    style="@style/Widget.Material3.Button"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEliminarIngreso"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:padding="0dp"
                    android:text="ðŸ—‘"
                    android:textSize="12sp"
                    app:cornerRadius="8dp"
                    app:backgroundTint="@color/danger_red"
                    style="@style/Widget.Material3.Button"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
