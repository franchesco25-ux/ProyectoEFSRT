<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/stitch_background"
    tools:openDrawer="start">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="100dp"
            android:clipToPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Header Section -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imgProfile"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/ic_person"
                        android:background="@color/stitch_card_bg"
                        android:padding="2dp"
                        app:shapeAppearanceOverlay="@style/CircleImage"
                        app:strokeColor="@color/stitch_primary"
                        app:strokeWidth="1dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/imgProfile"
                        android:layout_marginStart="12dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BIENVENIDO"
                            android:textColor="@color/stitch_primary"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.1"/>
                        <TextView
                            android:id="@+id/tvSaludoDashboard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hola, Alex"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/btnNotifications"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/bg_stitch_card"
                        android:backgroundTint="#1AFFFFFF"
                        android:src="@drawable/ic_notifications"
                        app:tint="@color/white" />
                </RelativeLayout>

                <!-- Balance Card -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_stitch_card"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BALANCE TOTAL"
                        android:textColor="@color/stitch_text_muted"
                        android:textSize="12sp"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="bottom"
                        android:layout_marginTop="4dp">
                        <TextView
                            android:id="@+id/tvMainBalance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$12,450.00"
                            android:textColor="@color/white"
                            android:textSize="34sp"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+2.4%"
                            android:textColor="@color/stitch_primary"
                            android:layout_marginStart="8dp"
                            android:layout_marginBottom="6dp"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnMainAgregar"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:text="Agregar"
                            android:textAllCaps="false"
                            android:backgroundTint="@color/stitch_primary"
                            android:textColor="@color/stitch_background"
                            android:textStyle="bold"
                            app:cornerRadius="12dp"
                            app:icon="@drawable/ic_add"
                            app:iconTint="@color/stitch_background"/>
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnMainEnviar"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="Enviar"
                            android:textAllCaps="false"
                            android:backgroundTint="#2AFFFFFF"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            app:cornerRadius="12dp"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Quick Actions Grid -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <LinearLayout
                        android:id="@+id/btn_quick_presupuesto"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true">
                        <FrameLayout android:layout_width="56dp" android:layout_height="56dp" android:background="@drawable/bg_stitch_card">
                            <ImageView android:layout_width="28dp" android:layout_height="28dp" android:src="@drawable/ic_wallet" android:layout_gravity="center" app:tint="@color/stitch_primary" />
                        </FrameLayout>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Presupuesto" android:textColor="@color/stitch_text_muted" android:textSize="10sp" android:layout_marginTop="4dp" android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_quick_metas"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true">
                        <FrameLayout android:layout_width="56dp" android:layout_height="56dp" android:background="@drawable/bg_stitch_card">
                            <ImageView android:layout_width="28dp" android:layout_height="28dp" android:src="@drawable/ic_goal" android:layout_gravity="center" app:tint="@color/stitch_primary" />
                        </FrameLayout>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Metas" android:textColor="@color/stitch_text_muted" android:textSize="10sp" android:layout_marginTop="4dp" android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_quick_analisis"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true">
                        <FrameLayout android:layout_width="56dp" android:layout_height="56dp" android:background="@drawable/bg_stitch_card">
                            <ImageView android:layout_width="28dp" android:layout_height="28dp" android:src="@drawable/ic_analysis" android:layout_gravity="center" app:tint="@color/stitch_primary" />
                        </FrameLayout>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Análisis" android:textColor="@color/stitch_text_muted" android:textSize="10sp" android:layout_marginTop="4dp" android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_quick_mas"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true">
                        <FrameLayout android:layout_width="56dp" android:layout_height="56dp" android:background="@drawable/bg_stitch_card">
                            <ImageView android:layout_width="28dp" android:layout_height="28dp" android:src="@drawable/ic_more" android:layout_gravity="center" app:tint="@color/stitch_primary" />
                        </FrameLayout>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Más" android:textColor="@color/stitch_text_muted" android:textSize="10sp" android:layout_marginTop="4dp" android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Monthly Budget Section -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Presupuesto Mensual"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="Detalles"
                        android:textColor="@color/stitch_primary"
                        android:textStyle="bold"
                        android:textSize="14sp"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/bg_stitch_card"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="70% usado"
                            android:textColor="@color/white"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="$1,050 / $1,500"
                            android:textColor="@color/white"
                            android:textStyle="bold"/>
                    </RelativeLayout>

                    <ProgressBar
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:layout_marginTop="12dp"
                        android:progress="70"
                        android:progressDrawable="@drawable/progress_bar_green"/>
                </LinearLayout>

                <!-- Savings Progress -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Progreso de Ahorro"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/tv_ver_todo_ahorro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="Ver Todo"
                        android:textColor="@color/stitch_primary"
                        android:textStyle="bold"
                        android:textSize="14sp"/>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/card_ahorro_tesla"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/bg_stitch_card"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:clickable="true"
                    android:focusable="true">
                    <FrameLayout android:layout_width="48dp" android:layout_height="48dp" android:background="@drawable/bg_stitch_card" android:backgroundTint="#1A0DF259">
                         <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_history" android:layout_gravity="center" app:tint="@color/stitch_primary" />
                    </FrameLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nuevo Tesla Model 3"
                                android:textColor="@color/white"
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:text="65%"
                                android:textColor="@color/stitch_primary"
                                android:textStyle="bold"/>
                        </RelativeLayout>
                        <ProgressBar
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:layout_marginTop="8dp"
                            android:progress="65"
                            android:progressDrawable="@drawable/progress_bar_green"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <!-- Bottom Navigation with Central FAB -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="bottom">

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottom_navigation"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignParentBottom="true"
                android:layout_margin="16dp"
                android:background="@drawable/bg_stitch_card"
                app:backgroundTint="#E6102216"
                app:itemIconTint="@color/stitch_primary"
                app:itemTextColor="@color/white"
                app:menu="@menu/bottom_nav_menu"
                app:labelVisibilityMode="labeled"
                app:elevation="8dp"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:src="@drawable/ic_add"
                app:backgroundTint="@color/stitch_primary"
                app:tint="@color/stitch_background"
                app:fabSize="normal"
                app:elevation="12dp"
                app:borderWidth="0dp"/>
        </RelativeLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <include
        android:id="@+id/nav_drawer"
        layout="@layout/nav_drawer_layout"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start" />

</androidx.drawerlayout.widget.DrawerLayout>
